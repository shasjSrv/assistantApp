<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_helloword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jzy.helloword.HomePageActivity">

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF03A9F4"
        android:layout_marginTop="24dp"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleColor="#585858"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleDelayClick="true"
        app:mrl_rippleHover="true"
        android:id="@+id/materialRippleLayout1">

        <Button
            android:id="@+id/ripple_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FF03A9F4"
            android:textColor="@color/cpb_white"
            android:textSize="14sp"
            android:text="@string/Video"/>



    </com.balysv.materialripple.MaterialRippleLayout>


    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF03A9F4"
        android:layout_marginTop="66dp"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleColor="#585858"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleDelayClick="true"
        app:mrl_rippleHover="true"
        android:id="@+id/materialRippleLayout2"
        android:layout_below="@+id/materialRippleLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
        android:id="@+id/ripple_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FF03A9F4"
        android:textColor="@color/cpb_white"
        android:textSize="14sp"
        android:text="@string/Chat"/>


    </com.balysv.materialripple.MaterialRippleLayout>


    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF03A9F4"
        android:layout_marginTop="66dp"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleColor="#585858"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleDelayClick="true"
        app:mrl_rippleHover="true"
        android:id="@+id/materialRippleLayout3"
        android:layout_below="@+id/materialRippleLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/ripple_layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FF03A9F4"
            android:textColor="@color/cpb_white"
            android:textSize="14sp"
            android:text="@string/Chat"/>


    </com.balysv.materialripple.MaterialRippleLayout>
